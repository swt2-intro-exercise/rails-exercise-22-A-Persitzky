<h1>Listing Articles</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @authors.each do |author| %>
        <tr>
            <td><%= author.first_name %></td>
            <td><%= author.last_name %></td>
            <td><a href="<%= author.homepage %>"><%= author.homepage %></a></td>
            <td><%= link_to 'Show', author_path(author) %></td>
        </tr>
    <% end %>
</table>